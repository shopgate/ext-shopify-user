{
  "version": "3.1.0",
  "id": "@shopgate/shopify-user",
  "trusted": true,
  "configuration": {
    "shopifyShopAlias": {
      "type": "bigApi",
      "destination": "backend",
      "default": null,
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.alias"
      }
    },
    "shopifyShopDomain": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.domain"
      }
    },
    "shopifyAccessToken": {
      "type": "bigApi",
      "destination": "backend",
      "default": null,
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.shopifyAccessToken"
      }
    },
    "shopifyShopId": {
        "type": "bigApi",
        "destination": "backend",
        "default": null,
        "params": {
          "method": "GET",
          "service": "config",
          "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
          "key": "value.backend.shopifyShopId"
        }
    },
    "shopifyHeadlessApiClientId": {
        "type": "bigApi",
        "destination": "backend",
        "default": null,
        "params": {
          "method": "GET",
          "service": "config",
          "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
          "key": "value.backend.shopifyHeadlessApi.clientId"
      }
    },
    "shopifyHeadlessApiClientSecret": {
        "type": "bigApi",
        "destination": "backend",
        "default": null,
        "params": {
          "method": "GET",
          "service": "config",
          "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
          "key": "value.backend.shopifyHeadlessApi.clientSecret"
        }
    },
    "shopifyHeadlessApiLoginRedirectUrl": {
        "type": "bigApi",
        "destination": "backend",
        "default": null,
        "params": {
          "method": "GET",
          "service": "config",
          "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
          "key": "value.backend.shopifyHeadlessApi.loginRedirectUrl"
      }
    },
    "shopifyHeadlessStorefrontAccessToken": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.shopifyHeadlessStorefrontAccessToken"
      }
    },
    "shopifyMultipassToken": {
      "type": "bigApi",
      "destination": "backend",
      "default": "",
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.multipassToken"
      }
    },
    "shopifyLoginStrategy": {
      "type": "bigApi",
      "destination": "frontend",
      "default": "basic",
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.shopifyLoginStrategy"
      }
    },
    "getUserAccountSettings": {
      "type": "bigApi",
      "destination": "frontend",
      "default": "required",
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/guest_login_mode?parsed=true",
        "key": "value"
      }
    },
    "userRegistrationUrl": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": ""
      }
    },
    "userDataCacheTtl": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": 600000
      }
    },
    "stage": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": "%(targetStage)s"
      }
    },
    "credentials": {
      "type": "bigApiCredentials",
      "destination": "backend"
    },
    "requestTimeout": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": {
          "bigApi": 15000,
          "token": 2000
        }
      }
    },
    "customerLinks": {
      "type": "admin",
      "destination": "frontend",
      "default": [
        {
          "key": "account",
          "show": false,
          "label": "Account",
          "target": "/account/profile",
          "icon": "AccountBoxIcon"
        },
        {
          "key": "orders",
          "show": false,
          "label": "Orders",
          "target": "/account/orders",
          "icon": "ChartIcon"
        }
      ],
      "params": {
        "type": "json",
        "label": "Custom link to be displayed when a customer is logged in"
      }
    }
  },
  "components": [
    {
      "id": "ShopifyHeadlessLogin",
      "target": "app.routes",
      "type": "portals",
      "path": "frontend/headlessLogin/routes/LoginScreen/index.jsx"
    },
    {
      "id": "HeadlessLoginSubscriptions",
      "path": "frontend/headlessLogin/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "LegacyLoginSubscriptions",
      "path": "frontend/legacyLogin/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "RegisterSubscription",
      "path": "frontend/Register/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "CheckoutSubscription",
      "path": "frontend/Checkout/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "GuestCheckoutLink",
      "path": "frontend/portals/GuestCheckoutLink/index.jsx",
      "target": "page.login.register-link.after",
      "type": "portals"
    },
    {
      "id": "GuestCheckoutSubscription",
      "path": "frontend/portals/GuestCheckoutLink/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "AccountSectionAndroid",
      "path": "frontend/portals/AccountSection",
      "target": "nav-menu.scanner.after",
      "type": "portals"
    },
    {
      "id": "AccountSectionIOS",
      "path": "frontend/portals/AccountSection",
      "target": "nav-menu.logout.before",
      "type": "portals"
    },
    {
      "id": "locale/en-US",
      "type": "translations",
      "path": "frontend/locale/en-US.json"
    },
    {
      "id": "locale/de-DE",
      "type": "translations",
      "path": "frontend/locale/de-DE.json"
    },
    {
      "id": "locale/fr-FR",
      "type": "translations",
      "path": "frontend/locale/fr-FR.json"
    },
    {
      "id": "locale/nl-NL",
      "type": "translations",
      "path": "frontend/locale/nl-NL.json"
    }
  ]
}
