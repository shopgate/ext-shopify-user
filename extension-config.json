{
  "version": "1.2.0",
  "id": "@shopgate/shopify-user",
  "trusted": true,
  "steps": [
  ],
  "configuration": {
    "shopifyShopAlias": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.alias"
      }
    },
    "shopifyAccessToken": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.shopifyAccessToken"
      }
    },
    "userRegistrationUrl" : {
      "type" : "static",
      "destination" : "backend",
      "params" : {
        "value" : ""
      }
    },
    "userDataCacheTtl" : {
      "type" : "static",
      "destination" : "backend",
      "params" : {
        "value" : 600000
      }
    }
  },
  "components": [
    {
      "id": "RegisterSubscription",
      "path": "frontend/Register/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "CheckoutSubscription",
      "path": "frontend/Checkout/subscribers.js",
      "type": "subscribers"
    }
  ]
}
