{
  "version": "2.1.2",
  "id": "@shopgate/shopify-user",
  "trusted": true,
  "configuration": {
    "shopifyShopAlias": {
      "type": "bigApi",
      "destination": "backend",
      "default": null,
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.frontend.alias"
      }
    },
    "shopifyAccessToken": {
      "type": "bigApi",
      "destination": "backend",
      "default": null,
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.shopifyAccessToken"
      }
    },
    "getUserAccountSettings": {
      "type": "bigApi",
      "destination": "frontend",
      "default": "required",
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/guest_login_mode?parsed=true",
        "key": "value"
      }
    },
    "userRegistrationUrl": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": ""
      }
    },
    "userDataCacheTtl": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": 600000
      }
    },
    "stage": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": "%(targetStage)s"
      }
    },
    "credentials": {
      "type": "bigApiCredentials",
      "destination": "backend"
    },
    "requestTimeout": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": {
          "bigApi": 15000,
          "token": 2000
        }
      }
    },
    "addressForm": {
      "type": "admin",
      "destination": "backend",
      "default": {
        "fields": {
          "firstName": {
            "type": "text",
            "label": "First Name",
            "sortOrder": 1
          },
          "lastName": {
            "type": "text",
            "label": "Last Name",
            "sortOrder": 2
          },
          "street1": {
            "type": "text",
            "label": "Address1",
            "sortOrder": 4
          },
          "street2": {
            "type": "text",
            "label": "Address2",
            "sortOrder": 5
          },
          "city": {
            "type": "text",
            "label": "City",
            "sortOrder": 6
          },
          "country": {
            "type": "country",
            "label": "Country",
            "countries": ["DE", "US", "AT", "FR", "GB"],
            "sortOrder": 7
          },
          "province": {
            "type": "province",
            "label": "Province",
            "actions": [
              {
                "type": "setVisibility",
                "rules": [
                  {
                    "data": ["US"],
                    "type": "oneOf",
                    "context": "country"
                  }
                ]
              }
            ],
            "required": true,
            "sortOrder": 8
          },
          "zipCode": {
            "type": "text",
            "label": "Postal/Zip Code",
            "sortOrder": 9
          },
          "custom": {
            "company": {
              "type": "text",
              "label": "Company",
              "sortOrder": 3
            },
            "phone": {
              "type": "phone",
              "label": "Phone",
              "sortOrder": 10
            }
          }
        }
      },
      "params": {
        "type": "json",
        "label": "Address fields",
        "required": true
      }
    },
    "addressDefaultGroups": {
      "type": "admin",
      "destination": "backend",
      "default": ["default"],
      "params": {
        "type": "json",
        "label": "Address default groups",
        "required": true,
        "options": {
          "placeholder": "[\"shipping\", \"billing\"]"
        }
      }
    },
    "userMenuEntries": {
      "type": "admin",
      "destination": "backend",
      "default": {
        "accountProfile": true,
        "addressBook": true
      },
      "params": {
        "type": "json",
        "label": "User menu entries",
        "required": true,
        "options": {
          "placeholder": "{\"accountProfile\": true, \"addressBook\": true}"
        }
      }
    }
  },
  "components": [
    {
      "id": "RegisterSubscription",
      "path": "frontend/Register/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "CheckoutSubscription",
      "path": "frontend/Checkout/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "GuestCheckoutLink",
      "path": "frontend/portals/GuestCheckoutLink/index.jsx",
      "target": "page.login.register-link.after",
      "type": "portals"
    },
    {
      "id": "GuestCheckoutSubscription",
      "path": "frontend/portals/GuestCheckoutLink/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "locale/en-US",
      "type": "translations",
      "path": "frontend/locale/en-US.json"
    },
    {
      "id": "locale/de-DE",
      "type": "translations",
      "path": "frontend/locale/de-DE.json"
    },
    {
      "id": "locale/fr-FR",
      "type": "translations",
      "path": "frontend/locale/fr-FR.json"
    },
    {
      "id": "locale/nl-NL",
      "type": "translations",
      "path": "frontend/locale/nl-NL.json"
    }
  ],
  "steps": [
    {
      "path": "extension/config/getConfig.js",
      "description": "Replace config by shopify extension",
      "hooks" : ["shopgate.user.getConfig.v1:after"],
      "input" : [],
      "output" : [
        {"key": "addressDefaultGroups", "optional": true},
        {"key": "userMenuEntries", "optional": true},
        {"key": "addressForm", "optional": true}
      ]
    }
  ]
}
